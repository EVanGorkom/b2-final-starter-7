<%= render partial: "shared/nav" %>

<body>
  <div class="row">
    <p class='col-12'>My Discounts</p>
  </div>

  <p><%= link_to "Create a new Discount", new_merchant_discount_path(@merchant) %></p>

  <div class="discounts">
    <% @discounts.each do |discount| %>
      <p>
        <div id=<%= discount.id %>>
          <%= link_to "Discount ##{discount.id}", merchant_discount_path(merchant_id: @merchant.id, id: discount.id) %>
          <%= " - Gives %#{discount.percentage} off, after purchasing #{discount.threshold} items." %>
          <%= button_to "Delete", merchant_discount_path(@merchant.id, discount.id), data: {turbo: false }, method: :delete %>
        </div><br>
      </p>
    <% end %>
  </div>
</body>