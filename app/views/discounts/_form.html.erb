<%= form_with model: model, method: method, url: url, class: 'merchant_discount_form', local: true do |f| %>
  <%= f.label :threshold, "Item Quantity to Qualify: " %>
  <%= f.number_field :threshold, type: "number" %><br/><br/>
  <%= f.label :percentage, "Percentage Off Order: " %>
  <%= f.number_field :percentage, type: "number" %><br/><br/>
  <%= f.submit 'Submit'%>
<% end %>